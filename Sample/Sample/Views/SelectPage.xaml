<FlexLayout Direction="Column" AlignItems="Center" JustifyContent="SpaceBetween">
	<Button WidthRequest="250" HeightRequest="60" Text="RepeatableWrapLayout" Command="{Binding GoToPage}" CommandParameter="MainPage" />
	<Button WidthRequest="250" HeightRequest="60" Text="RepeatableStack" Command="{Binding GoToPage}" CommandParameter="RepeatableStackPage" />
    <Button WidthRequest="250" HeightRequest="60" Text="RepeatableFlex" Command="{Binding GoToPage}" CommandParameter="RepeatableFlexPage" />
    <Button WidthRequest="250" HeightRequest="60" Text="WrapLayoutWithSelector" Command="{Binding GoToPage}" CommandParameter="WrapLayoutWithSelector" />
    <Button WidthRequest="250" HeightRequest="60" Text="StackLayoutWithSelector" Command="{Binding GoToPage}" CommandParameter="StackLayoutWithSelector" />
    <Button WidthRequest="250" HeightRequest="60" Text="FlexLayoutWithSelector" Command="{Binding GoToPage}" CommandParameter="FlexLayoutWithSelector" />
</FlexLayout>

</ContentPage>
